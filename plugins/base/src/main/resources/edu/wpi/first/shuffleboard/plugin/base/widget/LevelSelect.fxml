<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import org.controlsfx.glyphfont.Glyph?>
<?import edu.wpi.first.shuffleboard.api.components.EditableLabel?>
<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="edu.wpi.first.shuffleboard.plugin.base.widget.LevelSelectWidget"
           fx:id="root"
           prefWidth="64" prefHeight="64" minWidth="64" minHeight="64">
    <padding>
        <Insets topRightBottomLeft="8"/>
    </padding>
    <VBox maxWidth="Infinity" alignment="TOP_LEFT" spacing="4">
        <StackPane prefHeight="100000" VBox.vgrow="ALWAYS">
            <StackPane maxWidth="Infinity" maxHeight="Infinity" fx:id="left">
                <Label fx:id="leftLabel" textAlignment="CENTER" text="1" wrapText="true" />
            </StackPane>
        </StackPane>
        <StackPane prefHeight="100000" VBox.vgrow="ALWAYS">
            <StackPane maxWidth="Infinity" maxHeight="Infinity" fx:id="middle">
                <Label fx:id="middleLabel" textAlignment="CENTER" text="Cube" wrapText="true" />
            </StackPane>
        </StackPane>
        <StackPane prefHeight="100000" VBox.vgrow="ALWAYS">
            <StackPane maxWidth="Infinity" maxHeight="Infinity" fx:id="right">
                <Label fx:id="rightLabel" textAlignment="CENTER" text="Cube" wrapText="true" />
            </StackPane>
        </StackPane>
    </VBox>
</StackPane>
